# IBKR Configuration
# Copy this file to .env and update with your settings

# Trading Mode (true = paper trading, false = live trading)
IBKR_PAPER_TRADING=true

# IBKR Connection Settings
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # 7497 for paper trading, 7496 for live trading
IBKR_CLIENT_ID=1
IBKR_TIMEOUT=20

# Trading Parameters
INITIAL_EQUITY=10000.0
MAX_WEIGHT_PER_SYMBOL=0.25
MAX_DRAWDOWN=0.15
MAX_DAILY_LOSS=0.02
MAX_SLIPPAGE_BPS=10

# Symbols to trade
TRADING_SYMBOLS=SPY,AAPL,NVDA

# Risk Management
VOL_TARGET_ANNUAL=0.12
VOL_LOOKBACK=20
