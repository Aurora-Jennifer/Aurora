# Alpaca API Credentials Configuration
# Copy this file to alpaca_credentials.yaml and fill in your actual credentials
# Get these from https://app.alpaca.markets/paper/dashboard/overview

alpaca:
  api_key: "your_paper_api_key_here"
  secret_key: "your_paper_secret_key_here"
  paper: true  # Always use paper trading for safety
  base_url: "https://paper-api.alpaca.markets"  # Paper trading URL

# Environment variables (alternative to YAML)
# ALPACA_API_KEY=your_paper_api_key_here
# ALPACA_SECRET_KEY=your_paper_secret_key_here
